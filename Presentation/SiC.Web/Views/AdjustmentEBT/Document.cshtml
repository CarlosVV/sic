@using Nagnoi.SiC.Web.Models.AdjustmentEBT

@{
    ViewBag.Title = "Documentar Débito EBT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DocumentViewModel

@section Styles{
    @Styles.Render("~/bundles/datepicker/css")
}

<div class="homePage">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header text-danger">
                <h3>Documentar Débito EBT</h3>
            </div>
        </div>
    </div>
    <form id="frmAjustes" method="post" action="#" class="row">
        <div class="col-md-12 hidden">
            <div class="form-group">
                @Html.DropDownList("AdjustmentStatuses", Model.AdjustmentStatuses, new { @class = "form-control input-sm" })
            </div>
        </div>
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong class="text-danger">
                            Listado de Pagos
                        </strong>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="tblPagos" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="hidden">PaymentId</th>
                                            <th>Nro. Caso</th>
                                            <th>Estatus</th>
                                            <th>Tipo Ajuste</th>
                                            <th>Concepto</th>
                                            <th># Cheque</th>
                                            <th>Fecha Emisión</th>
                                            <th>Desde</th>
                                            <th>Hasta</th>
                                            <th>Días</th>
                                            <th>Monto</th>
                                            <th>Solicitado Por</th>
                                            <th>Fecha Solicitud</th>
                                            <th>Completado En</th>
                                            <th>Monto Debitado</th>
                                            <th>Observaciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <input id="btnSave" class="btn btn-success" type="button" value="Guardar" />
                        <input class="btn btn-success cancelar" type="button" value="Cancelar" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/adjustmentebtdocument/scripts")
}