<div id="resumen" class="panel panel-default">
    <div class="panel-heading" role="tab">
        <div class="panel-title">
            <strong class="text-danger">
                Resumen
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-collapse collapse in" role="tabpanel">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class='table-responsive'>
                        <table id="tblPeremptory" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Model.ResourceService.GetResourceString("PagoPerentorio.Beneficiario.label.text")
                                    </th>
                                    <th>
                                        @Model.ResourceService.GetResourceString("PagoPerentorio.Relacion.label.text")
                                    </th>
                                    <th>
                                        @Model.ResourceService.GetResourceString("PagoPerentorio.Fecha.label.text")
                                    </th>
                                    <th>
                                        @Model.ResourceService.GetResourceString("PagoPerentorio.MontoPagado.header.text")
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="detalle" class="panel panel-default">
    <div class="panel-heading" role="tab">
        <div class="panel-title">
            <strong class="text-danger">
                Detalle
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-collapse collapse in" role="tabpanel">
        <div class="panel-body">
            <form id="frmPeremptory" action="/" method="post">
                <fieldset>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label" for="due_cantidadsolicitada">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.CantidadSolicitada.label.text")
                                </label>
                                <input class="form-control" id="due_cantidadsolicitada" name="due_cantidadsolicitada" type="text" maxlength="75" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label" for="due_beneficiario">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.Beneficiario.label.text")
                                </label>
                                <select class="form-control" id="due_beneficiario" name="due_beneficiario">
                                    <option value="">-- Seleccionar --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label" for="due_relacion">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.Relacion.label.text")
                                </label>
                                <input class="form-control" id="due_relacion" name="due_relacion" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label class="control-label" for="due_observaciones">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.Observaciones.label.text")
                                </label>
                                <p>
                                    <textarea class="form-control" rows="5" id="due_observaciones" name="due_observaciones" required></textarea>
                                </p>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="panel-footer clearfix">
            <div class="pull-right">
                <input class="btn btn-success nuevo" type="button" value="Nuevo" />
                <input id="btnSavePeremptory" class="btn btn-success" type="button" value="Guardar" />
                <input class="btn btn-success cancelar" type="button" value="Cancelar" />
            </div>
        </div>
    </div>
</div> 