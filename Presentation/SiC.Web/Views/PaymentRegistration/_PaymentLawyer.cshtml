<div id="detalle" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong class="text-danger">
                Detalle
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form id="frmLawyer" action="/" method="post">
            <fieldset>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="lawyer_fechadecision">
                                @Model.ResourceService.GetResourceString("PagoDietas.FechaDecision.label.text")
                            </label>
                            <div class='input-group date'>
                                <input type="text" class="form-control" id="lawyer_fechadecision" name="lawyer_fechadecision" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-md-offset-1">
                        <h5>
                            <strong class="text-danger">
                                Información de Comisión Industrial
                            </strong>
                        </h5>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label" for="lawyer_fvisita">
                                        @Model.ResourceService.GetResourceString("PagoDietas.FechaVisita.label.text")
                                    </label>
                                    <div class='input-group date'>
                                        <input type="text" class="form-control" id="lawyer_fvisita" name="lawyer_fvisita" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label" for="lawyer_fnotificacion">
                                        @Model.ResourceService.GetResourceString("PagoDietas.FechaNotificacion.label.text")
                                    </label>
                                    <div class='input-group date'>
                                        <input type="text" class="form-control" id="lawyer_fnotificacion" name="lawyer_fnotificacion" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label" for="lawyer_numerocaso">
                                        @Model.ResourceService.GetResourceString("PagoDietas.NumeroCaso.label.text")
                                    </label>
                                    <input class="form-control" id="lawyer_numerocaso" name="lawyer_numerocaso" type="text" maxlength="75" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="lawyer_montototal">
                                @Model.ResourceService.GetResourceString("PagoDietas.MontoTotal.label.text")
                            </label>
                            <input class="form-control" id="lawyer_montototal" name="lawyer_montototal" type="text" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label class="control-label" for="lawyer_observaciones">
                                @Model.ResourceService.GetResourceString("PagoDietas.Observaciones.label.text")
                            </label>
                            <p>
                                <textarea class="form-control" rows="5" id="lawyer_observaciones" name="lawyer_observaciones" required></textarea>
                            </p>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="panel-footer clearfix">
        <div class="pull-right">
            <input class="btn btn-success nuevo" type="button" value="Nuevo" />
            <input id="btnSaveLawyer" class="btn btn-success" type="button" value="Guardar" />
            <input class="btn btn-success cancelar" type="button" value="Cancelar" />
        </div>
    </div>
</div>