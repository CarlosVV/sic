<div id="resumen" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong class="text-danger">
                Resumen
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class='table-responsive'>
                    <table id="tblInvestment" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="active">
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Relación
                                </th>
                                <th>
                                    Fecha de Inversión
                                </th>
                                <th>
                                    Monto
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th class="text-right">
                                    Total
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="row hidden">
            <div class="col-md-2 col-md-offset-4">
                <div class="form-group">
                    <input class="form-control" id="inv_totalinversion" name="inv_totalinversion" type="text" maxlength="75" />
                </div>
            </div>
        </div>
    </div>
</div>
<div id="detalle" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong class="text-danger">
                Detalle
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form id="frmInvestment" action="/" method="post">
            <fieldset>
                <div class="row">
                    <div class="col-md-3 hidden">
                        <div class="form-group">
                            <label class="control-label" for="inv_fechaemisiondecision">
                                @Model.ResourceService.GetResourceString("PagoInv.FechaEmisionDeDecision.label.text")
                            </label>
                            <div class='input-group date'>
                                <input type="text" class="form-control" id="inv_fechaemisiondecision" name="inv_fechaemisiondecision" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="inv_beneficiario">
                                @Model.ResourceService.GetResourceString("PagoPerentorio.Beneficiario.label.text")
                            </label>
                            <select class="form-control" id="inv_beneficiario" name="inv_beneficiario">
                                <option value="">-- Seleccionar --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="inv_relacion">
                                @Model.ResourceService.GetResourceString("PagoPerentorio.Relacion.label.text")
                            </label>
                            <input class="form-control" id="inv_relacion" name="inv_relacion" readonly />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-success pull-right" type="button" id="addRow">
                            Agregar Pago
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tblAddInvestment" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("PagoInv.PagoDirigidoA.label.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("PagoInv.Importe.header.text")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-3 col-md-offset-5 hidden">
                        <div class="form-group">
                            <input class="form-control" id="inv_totalinversiones" name="inv_totalinversiones" type="text" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label class="control-label" for="Inv_observaciones">
                                @Model.ResourceService.GetResourceString("PagoInv.Observaciones.label.text")
                            </label>
                            <p>
                                <textarea class="form-control" rows="5" id="Inv_observaciones" name="Inv_observaciones" required></textarea>
                            </p>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="panel-footer clearfix">
        <div class="pull-right">
            <input class="btn btn-success nuevo" type="button" value="Nuevo" />
            <input id="btnSaveInvestment" class="btn btn-success" type="button" value="Guardar" />
            <input class="btn btn-success cancelar" type="button" value="Cancelar" />
        </div>
    </div>
</div>