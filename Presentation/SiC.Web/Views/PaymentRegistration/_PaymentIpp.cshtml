@using Nagnoi.SiC.Web.Models.PaymentRegistration

@model IndexViewModel

<div id="resumen" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong class="text-danger">
                Resumen
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class='table-responsive'>
                    <table id="tblIpp" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="active">
                                <th>
                                    @Model.ResourceService.GetResourceString("PagoIpp.FechaAdjudicacion.header.text")
                                </th>
                                <th>
                                    @Model.ResourceService.GetResourceString("PagoIpp.Semanas.label.text")
                                </th>
                                <th>
                                    Mensualidad
                                </th>
                                <th>
                                    @Model.ResourceService.GetResourceString("PagoIpp.CantidadAdjudicada.header.text")
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="detalle" class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <strong class="text-danger">
                Detalle
            </strong>
            <div class="pull-right">
                <a class="collapse-click">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form id="frmIpp" action="/" method="post">
            <fieldset>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="ipp_fechaadjudicacion">
                                @Model.ResourceService.GetResourceString("PagoIpp.FechaAdjudicacion.label.text")
                            </label>
                            <div class='input-group date'>
                                <input type="text" class="form-control" id="ipp_fechaadjudicacion" name="ipp_fechaadjudicacion" readonly />
                                <label class="input-group-btn" for="ipp_fechaadjudicacion">
                                    <span class="btn btn-default">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </label>                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="ipp_adjudicacionadicional">
                                Cantidad Adjudicada
                            </label>
                            <input class="form-control" id="ipp_adjudicacionadicional" name="ipp_adjudicacionadicional" type="text" maxlength="75" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="ipp_semanas">
                                @Model.ResourceService.GetResourceString("PagoIpp.Semanas.label.text")
                            </label>
                            <label class="form-control" id="ipp_semanas"></label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label" for="ipp_mensualidad">
                                @Model.ResourceService.GetResourceString("PagoIpp.Mensualidad.label.text")
                            </label>
                            <label class="form-control" id="ipp_mensualidad"></label>
                        </div>
                    </div>
                </div>
                @{
                    @Html.Partial("_DesgloseIPP")                    
                }
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label" for="ipp_observaciones">
                                @Model.ResourceService.GetResourceString("PagoIpp.Observaciones.label.text")
                            </label>
                            <p>
                                <textarea class="form-control" rows="5" id="ipp_observaciones" name="ipp_observaciones" required></textarea>
                            </p>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="panel-footer clearfix">
        <div class="pull-right">
            <input class="btn btn-success nuevo" type="button" value="Nuevo" />
            <input id="btnSaveIpp" class="btn btn-success" type="button" value="Guardar" />
            <input class="btn btn-success cancelar" type="button" value="Cancelar" />
        </div>
    </div>
</div>