@using Nagnoi.SiC.Web.Models.PreExisting
@model PreExistingViewModel

@section Scripts {
    @Scripts.Render("~/bundles/Preexisting")
    
}
<div class="homePage">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header text-danger">
                <h1>Casos Pre-Existentes</h1>
            </div>
        </div>
    </div>
    @{
        Html.RenderAction("SearchBox", "Case");
    }
    <form id="CaseInformation" class="hidden">
        <div class="row hidden" id="header-panel">
            <div class="col-md-12">
                <h3>
                    Casos Pre-Existentes
                </h3>
                <hr />
                <div id="CaseSummary" class="col-lg-12">
                    @Html.Partial("_HeaderCase", Model.CaseModel)
                </div>

                <div id="AwardAmount" class="col-lg-12">
                    @Html.Partial("_AwardAmount", Model)
                </div>

                <div id="PreExistingCases" class="col-lg-12">
                    @Html.Partial("_PreExistingCases")
                </div>

                <div id="OtherPreExistingCases" class="col-lg-12">
                    @Html.Partial("_OtherPreExistingCases")
                </div>
                <div id="OtherPreExistingCases" class="col-lg-12">
                    @Html.Partial("SearchCase/_Modal", Model.SearchModel)
                </div>
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <div class="form-group">
                            <label class="control-label"></label>
                            <div class="btn-group btn-block">
                                <button class="btn btn-lg btn-info btn-block" id="searchOtherBtn">Buscar otros casos relacionados</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="" class="col-lg-12">
                    @Html.Partial("_EditTransactionDetail",Model.transactionDetailModel)
                </div>
                <div id="ajaxResultC"></div>
            </div>
        </div>>
    </form>
</div>
