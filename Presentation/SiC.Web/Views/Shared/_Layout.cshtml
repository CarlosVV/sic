@using System.Globalization;

<!DOCTYPE html>
<html class="no-js" lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="robots" content="noindex, nofollow" />
    <title>@ViewBag.Title - SIC</title>
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />    
    @Styles.Render("~/content/base/css")
    @Styles.Render("~/content/datatables/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top shadowTop">
        <div class="container-large">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/Content/Images/SIC.png" title="CFSE" alt="Brand"/>
                </a>
            </div>
           @Html.Partial("_Menu")
        </div>
    </nav>
    <div class="container-fluid shadowBottom">
        <div class="container-large body-content">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container-large footer-container">
            <p>&copy; @DateTime.UtcNow.Year - Corporación del Fondo del Seguro del Estado</p>
        </div>
    </footer>
    <script type="text/javascript">
        var root = '@Url.Content("~/")';
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/noty")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/numeral")
    @Scripts.Render("~/bundles/fileinput")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/blockui")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/bundles/autonumeric")    
    @RenderSection("scripts", required: false)
</body>
</html>