@using Nagnoi.SiC.Web.Models.PaymentRegistration

@model IndexViewModel

<div class="row">
    <div class="col-md-12">
        <button id="btnShowDesglose" type="button" class="btn btn-success pull-right" disabled>
            Desglosar IPP
        </button>
    </div>
</div>
<div id="panel-desglose" class="row hidden">
    <div class="col-md-12">
        <h4>
            Desglosar Incapacidad
        </h4>
        <div class="pull-right">
            <button id="btnAddDesglose" type="button" class="btn btn-success">
                Agregar
            </button>
        </div>
        <div class="clearfix"></div>
        <br />
        <div class="table-responsive">
            <table id="tblDesglosarIpp" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th>
                            Región Anatómica
                        </th>
                        <th>
                            Codificación
                        </th>
                        <th>
                            %
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="hidden">
                        <td>
                            <button type="button" class="btn btn-default btn-sm desglose-remove">
                                <i class="fa fa-minus"></i>
                            </button>
                        </td>
                        <td>
                            @Html.DropDownList("GroupedCompensationRegion", Model.GroupedCompensationRegions, new { @class = "form-control desglose-area" })
                        </td>
                        <td>
                            @Html.DropDownList("CompensationRegion", Model.CompensationRegions, new { @class = "form-control desglose-codificacion" })
                        </td>
                        <td>
                            <input type="text" class="form-control desglose-percentage" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="pull-right">
            <button id="btnSaveDesglose" type="button" class="btn btn-success">
                Guardar
            </button>
            <button id="btnCancelDesglose" type="button" class="btn btn-success">
                Cancelar
            </button>
        </div>
    </div>
</div>