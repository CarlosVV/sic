<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">Criterios de Búsqueda para Patronos con Investigación o Intervención</strong>
                    <a id="clearBtn" class="btn btn-warning btn-xs pull-right"><span class="fa fa-eraser"></span></a>
                </span>
            </div>
            <div id="formPanel" class="panel-body">
                <form id="searchInvIntForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" for="name">Nombre</label>
                                        <input class="form-control" id="name" name="name" type="text" maxlength="75" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" for="legalName">Haciendo negocios como (DBA)</label>
                                        <input class="form-control" id="legalName" name="legalName" type="text" maxlength="60" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="ein">EIN</label>
                                        <input class="form-control" id="ein" name="ein" type="text" maxlength="13" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="policyNo">No. Póliza</label>
                                        <input class="form-control" id="policyNo" name="policyNo" type="text" maxlength="10" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="employerBk">No. Cuenta UI</label>
                                        <input class="form-control" id="employerBk" name="employerBk" type="text" maxlength="10" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="phone">Teléfono</label>
                                        <input class="form-control" id="phone" name="phone" type="tel" maxlength="14" />
                                    </div>
                                </div>
                            </div>
                            @*<div class="row col-bottom">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="region">Ciudad</label>
                                        @Html.DropDownList("Ciudad", new SelectList(SelectListItemRepo.GetCities(), "Id", "Name"), "", new { Id = "city", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="reason">Razón de Alerta</label>
                                        @Html.DropDownList("Razón", new SelectList(SelectListItemRepo.GetAlertType(), "Description", "Description"), "", new { Id = "reason", @class = "form-control" })
                                    </div>
                                </div>*@
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="control-label" for="billingYear">Año Póliza</label>
                                        <div class="input-group">
                                            <div class="input-group date" id="datePickerBillingYear">
                                                <input type="text" class="form-control" id="billingYear" name="billingYear" aria-describedby="billingYear-addon" value="">
                                                <span class="input-group-addon" id="billingYear-addon">
                                                    <span class="fa fa-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-md-offset-4 pulldown">
                                    <input id="backBtn" type="button" class="btn btn-danger" value="Regresar" />
                                    <input id="searchBtn" type="button" class="btn btn-success" value="Buscar" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title"><strong class="text-danger">Resultados</strong></span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="ResearchedEmployerDataTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr class="active">
                                        <th></th>
                                        <th>Nombre</th>
                                        <th>EIN</th>
                                        <th>No. Póliza</th>
                                        <th>Año</th>
                                        <th>Ciudad</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
