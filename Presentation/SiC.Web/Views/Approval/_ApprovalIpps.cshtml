<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Lista de Casos
                    </strong>
                </span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblIpps" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="active">
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.NumeroDeCaso.header.text")
                                        </th>
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.NombreLesionado.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.SSN.header.text")                                            
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.FechaAdjudicacion.header.text")                                                                                        
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.TipoAdjudicacion.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.CantidadAdjudicacion.header.text")                                            
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.PagoInicial.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.Mensualidad.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.Semanas.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.TotalPagar.header.text")                                            
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.IPP.Estado.header.text")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-ipp" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <strong class="text-danger">
                        Editar Pago Ipp
                    </strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="ipp_fechaadjudicacion">
                                    Fecha Adjudicación
                                </label>
                                <div class='input-group date'>
                                    <input type="text" class="form-control" id="ipp_fechaadjudicacion" name="ipp_fechaadjudicacion" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="ipp_adjudicacionadicional">
                                    @Model.ResourceService.GetResourceString("PagoIpp.AdjudicacionAdicional.label.text")
                                </label>
                                <input id="ipp_adjudicacionadicional" name="ipp_adjudicacionadicional" class="form-control" type="text" maxlength="75" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="ipp_mensualidad">
                                    @Model.ResourceService.GetResourceString("PagoIpp.Mensualidad.label.text")
                                </label>
                                <input id="ipp_mensualidad" name="ipp_mensualidad" class="form-control text-right" type="text" maxlength="75" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="ipp_semanas">
                                    @Model.ResourceService.GetResourceString("PagoIpp.Semanas.label.text")
                                </label>
                                <input id="ipp_semanas" name="ipp_semanas" class="form-control text-right" type="text" maxlength="75" readonly />
                            </div>
                        </div>
                    </div>
                    @{
                        var model = new Nagnoi.SiC.Web.Models.PaymentRegistration.IndexViewModel();
                        @Html.Partial("_DesgloseIPP", model)
                    }
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label" for="ipp_observaciones">
                                    @Model.ResourceService.GetResourceString("PagoIpp.Observaciones.label.text")
                                </label>
                                <textarea id="ipp_observaciones" name="ipp_observaciones" class="form-control" style="width: 100%" rows="3" placeholder="Observaciones" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdateIpp" type="button" class="btn btn-info">
                    Actualizar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>