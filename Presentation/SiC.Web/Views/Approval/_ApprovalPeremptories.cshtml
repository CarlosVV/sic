<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Lista de Casos
                    </strong>
                </span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblPeremptories" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="active">
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NumeroDeCaso.header.text")
                                        </th>
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NombreLesionado.header.text")
                                        </th>
                                        <th>
                                            SSN
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.FechaDecision.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Fecha.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Beneficiario.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Relacion.header.text")
                                        </th>
                                        <th>
                                            Cantidad
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Estado.header.text")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-peremptory" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <strong class="text-danger">
                        Editar Pago de Gasto Perentorio
                    </strong>
                </h4>
            </div>
            <div class="modal-body">
                <input id="paymentid" name="paymentid" type="hidden" />
                <input id="transactionid" name="transactionid" type="hidden" />
                <div class="panel-body">
                    <div id="msgerror" class="alert alert-danger hidden"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="due_cantidadsolicitada">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.CantidadSolicitada.label.text")
                                </label>
                                <input class="form-control text-right" id="due_cantidadsolicitada" name="due_cantidadsolicitada" type="text" maxlength="75" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label class="control-label" for="due_observaciones">
                                    @Model.ResourceService.GetResourceString("PagoPerentorio.Observaciones.label.text")
                                </label>
                                <textarea id="due_observaciones" name="due_observaciones" class="form-control" style="width: 100%" rows="3" placeholder="Observaciones" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdatePeremptory" type="button" class="btn btn-info">
                    Actualizar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>