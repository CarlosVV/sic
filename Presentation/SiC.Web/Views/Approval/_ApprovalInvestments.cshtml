<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Lista de Casos
                    </strong>
                </span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblInvestments" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="active">
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NumeroDeCaso.header.text")
                                        </th>
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NombreLesionado.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NumeroSeguroSocial.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.FechaEmisionDecision.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.TotalInversion.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.RazonInversion.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Estado.header.text")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-investments" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <strong class="text-danger"> Editar Pago de Inversiones</strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <button id="btnAddInvestment" name="btnAddInvestment" type="button" class="btn btn-success">
                                Agregar Pago
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tblEditInvestments" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("PagoInv.PagoDirigidoA.label.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("PagoInv.Importe.header.text")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-3 col-md-offset-5">
                        <div class="form-group">
                            <input id="inv_totalinversiones" name="inv_totalinversiones" class="form-control hidden" type="text" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label" for="inv_observaciones">
                                @Model.ResourceService.GetResourceString("PagoInv.Observaciones.label.text")
                            </label>
                            <textarea id="inv_observaciones" name="inv_observaciones" class="form-control" style="width: 100%" rows="3" placeholder="Observaciones" required></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdateInvestments" type="button" class="btn btn-info">
                    Actualizar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>