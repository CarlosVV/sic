<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Lista de Casos
                    </strong>
                </span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblPendingDiets" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="active">
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NumeroDeCaso.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NombreLesionado.header.text")
                                        </th>
                                        <th>
                                            SSN
                                        </th>
                                        <th>
                                            Fecha de Nacimiento
                                        </th>
                                        <th>
                                            Desde
                                        </th>
                                        <th>
                                            Hasta
                                        </th>
                                        <th>
                                            Nro. de Días
                                        </th>
                                        <th>
                                            Jornal
                                        </th>
                                        <th>
                                            Comp. Semanal
                                        </th>
                                        <th>
                                            Dieta
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Estado.header.text")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-pending-diet" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <strong class="text-danger">
                        Editar Pago Dietas Pendientes
                    </strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" for="dieta_fechadecision">
                                    @Model.ResourceService.GetResourceString("PagoDietas.FechaDecision.label.text")
                                </label>
                                <div class="input-group date">
                                    <input id="dieta_fechadecision" name="dieta_fechadecision" type="text" class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                <strong class="text-danger">
                                    Información de Comisión Industrial
                                </strong>
                            </h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="dieta_fvisita">
                                    @Model.ResourceService.GetResourceString("PagoDietas.FechaVisita.label.text")
                                </label>
                                <div class="input-group date">
                                    <input id="dieta_fvisita" name="dieta_fvisita" type="text" class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="dieta_fnotificacion">
                                    @Model.ResourceService.GetResourceString("PagoDietas.FechaNotificacion.label.text")
                                </label>
                                <div class="input-group date">
                                    <input id="dieta_fnotificacion" name="dieta_fnotificacion" type="text" class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="dieta_numerocaso">
                                    @Model.ResourceService.GetResourceString("PagoDietas.NumeroCaso.label.text")
                                </label>
                                <input id="dieta_numerocaso" name="dieta_numerocaso" class="form-control" type="text" maxlength="75" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                <strong class="text-danger">
                                    Periodo
                                </strong>
                            </h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button id="btnAddPeriodDiet" name="btnAddPeriodDiet" class="btn btn-info" type="button">
                                Nuevo Pago
                            </button>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <table id="tblEditPendingDietPeriods" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="text-center">
                                            @Model.ResourceService.GetResourceString("PagoDietas.Desde.header.text")
                                        </th>
                                        <th class="text-center">
                                            @Model.ResourceService.GetResourceString("PagoDietas.Hasta.header.text")
                                        </th>
                                        <th class="hidden">
                                            Nro. Dias
                                        </th>
                                        <th class="text-center">
                                            @Model.ResourceService.GetResourceString("PagoDietas.Cantidad.header.text")
                                        </th>
                                        <th>
                                            Descuento
                                        </th>
                                        <th>
                                            Total a Pagar
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-offset-9">
                                <div class="form-group">
                                    <label class="control-label sr-only" for="dieta_montototal">
                                        @Model.ResourceService.GetResourceString("PagoDietas.MontoTotal.label.text")
                                    </label>
                                    <input id="dieta_montototal" name="dieta_montototal" class="form-control hidden" type="text" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label" for="dieta_observaciones">
                                    @Model.ResourceService.GetResourceString("PagoDietas.Observaciones.label.text")
                                </label>
                                <textarea id="dieta_observaciones" name="dieta_observaciones" class="form-control" style="width: 100%" rows="3" placeholder="Observaciones" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdatePendingDiet" type="button" class="btn btn-info">
                    Actualizar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>