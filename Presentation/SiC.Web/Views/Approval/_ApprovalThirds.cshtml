<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Lista de Casos
                    </strong>
                </span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblThirds" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr class="active">
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NumeroDeCaso.header.text")
                                        </th>
                                        <th>
                                            CaseId
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.NombreLesionado.header.text")
                                        </th>
                                        <th>
                                            SSN
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Fecha.header.text")
                                        </th>
                                        <th>
                                            Entidad / Custodio
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Monto.header.text")
                                        </th>
                                        <th>
                                            @Model.ResourceService.GetResourceString("FormAprobaciones.Estado.header.text")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-thirdpayment" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <input type="hidden" id="IsSinglePayment" />
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <strong class="text-danger">
                        Editar Pago Terceros
                    </strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <div id="msgerror" class="alert alert-danger hidden"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <input id="tipo_pago" name="tipo_pago" type="radio" value="1" checked />
                                <label class="chk" for="tipo_pago">
                                    @Model.ResourceService.GetResourceString("PagoTerceros.TipoPagoUnico.label.text")
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input id="tipo_pago" name="tipo_pago" type="radio" value="2" />
                                <label class="chk" for="tipo_pago">
                                    @Model.ResourceService.GetResourceString("PagoTerceros.PagosMultiples.label.text")
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="unsolopago">
                                    @Model.ResourceService.GetResourceString("PagoTerceros.UnSoloPago.label.text")
                                </label>
                                <input id="thirdpartyscheduleid" name="thirdpartyscheduleid" type="hidden" />
                                <input id="unsolopago" name="unsolopago" class="form-control text-right" type="text" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="pago1">
                                    @Model.ResourceService.GetResourceString("PagoTerceros.Pago1.label.text")
                                </label>
                                <input id="pago1" name="pago1" class="form-control text-right" type="text" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label" for="pago2">
                                    @Model.ResourceService.GetResourceString("PagoTerceros.Pago2.label.text")
                                </label>
                                <input id="pago2" name="pago2" class="form-control text-right" type="text" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label" for="observaciones">
                                        @Model.ResourceService.GetResourceString("PagoTerceros.Observaciones.label.text")
                                    </label>
                                    <textarea id="third_observaciones" name="third_observaciones" class="form-control" style="width: 100%" rows="3" placeholder="Observaciones" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdateThirdPayment" type="button" class="btn btn-info">
                    Actualizar
                </button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>