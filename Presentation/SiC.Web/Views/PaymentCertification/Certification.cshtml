<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="panel-title">
                    <strong class="text-danger">
                        Cantidades adeudadas o descuentos adicionales
                    </strong>
                </span>
                <div class="pull-right">
                    <a class="collapse-click">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class='table-responsive'>
                            <table id="tblInsert" class="table table-striped table-bordered">
                                <thead>
                                    <tr class="active">
                                        @*<th></th>*@
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.NumeroDeCaso.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.Concepto.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.FechaDesde.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.FechaHasta.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.TipoPago.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.NumeroDeFactura.header.text")</th>
                                        <th>@Model.ResourceService.GetResourceString("PagoCertificacion.Cantidad.header.text")</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">Observaciones</span>
                            <textarea class="form-control vertical-align-bottom" rows="3" id="txtComment"></textarea>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-2 vertical-align-bottom">
                        <div class="input-group">
                            <span class="input-group-addon">Monto Total $</span>
                            <input type="text" class="form-control text-right" aria-label="Monto Total" id="txtTotalAmount" disabled />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>