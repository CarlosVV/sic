@model Nagnoi.SiC.Web.Models.Case.SearchViewModel

<form id="frmCaseSearch" action="#" method="post">
    <div class="row">
        <div class="col-md-12">
            <div id="search-panel" class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <strong class="text-danger">
                            Búsqueda de caso
                        </strong>
                        <div class="pull-right">
                            <a class="collapse-click">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3 nopadding">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.NumeroDeCaso.header.text")
                                    </label>
                                    @Html.TextBoxFor(model => model.CaseNumber, new { @class = "form-control search", maxlength = "75" })
                                </div>
                            </div>
                            <div class="col-md-9 nopaddingright">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.LesionadoBeneficiario.header.text")
                                    </label>
                                    @Html.TextBoxFor(model => model.EntityName, new { @class = "form-control search", maxlength = "200" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 nopadding">
                            <div class="col-md-3 nopadding">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.SeguroSocial.header.text")
                                    </label>
                                    @Html.TextBoxFor(model => model.SocialSecurityNumber, new { @class = "form-control search", maxlength = "11" })
                                </div>
                            </div>
                            <div class="col-md-3 nopaddingright">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.FechaNacimiento.header.text")
                                    </label>
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control search" })
                                            <label class="input-group-btn" for="BirthDate">
                                                <span class="btn btn-default">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                            </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 nopaddingright">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.FechaRadicacion.header.text")
                                    </label>
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.FilingDate, new { @class = "form-control search" })
                                        <label class="input-group-btn" for="FilingDate">
                                            <span class="btn btn-default">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3 nopadding">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.Region.header.text")
                                    </label>
                                    @Html.DropDownListFor(model => Model.RegionId, Model.Regions, new { @class = "form-control search" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.Clinics.header.text")
                                    </label>
                                    @Html.DropDownListFor(model => Model.ClinicId, Model.Clinics, new { @class = "form-control search" })
                                </div>
                            </div>
                            <div class="col-md-3 nopaddingleft">
                                <div class="form-group">
                                    <label class="control-label">
                                        @Model.ResourceService.GetResourceString("SearchBox.Filter.NumeroEBT.header.text")
                                    </label>
                                    @Html.TextBoxFor(model => model.EBTNumber, new { @class = "form-control search", maxlength = "9" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button id="btnSearch" type="button" class="btn btn-info">
                                    Buscar
                                </button>
                                <button id="btnClear" type="button" class="btn btn-default">
                                    Limpiar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="results-panel" class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <strong class="text-danger">
                            Lista de Casos
                        </strong>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="tblCases" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.NumeroDeCaso.header.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.NombreDeLesionado.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.NumeroDeSeguroSocial.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.FechaDeNacimiento.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.FechaDeRadicacion.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.Relacion.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.Region.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.Dispensario.label.text")
                                            </th>
                                            <th>
                                                @Model.ResourceService.GetResourceString("SearchBox.NumeroEBT.label.text")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot></tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>