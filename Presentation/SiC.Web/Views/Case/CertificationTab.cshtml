            </table>
        </div>
    </div>
</div>
<div class="row">
     <div class="col-md-9">
        <div class="form-group">
            <label class="control-label" for="txtComment">
                Observaciones @*@Model.ResourceService.GetResourceString("PagoInv.Observaciones.label.text")*@
            </label>
            <p>
                <textarea class="form-control" rows="5" id="txtComment" name="txtComment"></textarea>
            </p>
        </div>
    </div>
    <div class=" bottom-right col-md-3">
        <div class="input-group">
            <span class="input-group-addon">Monto Total $</span>
            <input type="text" class="form-control text-right" aria-label="Monto Total" id="txtTotalAmount" disabled />
        </div>
    </div>
</div>

    @section Scripts {
